.uk-container.uk-container-center.uk-margin-top.uk-margin-bottom
  = image_tag "logo.png", style: "height: 30px"
  - if user_signed_in?
    = link_to "退出登录", user_session_path, method: :delete, class: "uk-button uk-button-danger uk-float-right"
    - if params[:controller] == "welcome"
      = link_to "我的后台", dashboard_path, class: "uk-button uk-float-right uk-margin-right"
    - else
      = link_to "回到首页", root_path, class: "uk-button uk-float-right uk-margin-right"

  - else
    = link_to "登录", new_user_session_path, class: 'uk-button uk-button-danger uk-float-right', role: 'button'
    = link_to "注册", new_user_registration_path, class: 'uk-button uk-button-warning uk-float-right uk-margin-right'
