= form_for [:dashboard, @user], class: 'uk-form', multipart: true  do |f|
  %table.uk-table.uk-table-hover
    %caption 管理员
    %tr
      %td Email
      %td
        = f.text_field :email, class: 'uk-from-large'

    %tr
      %td 密码
      %td= f.text_field :password

    %tr
      %td.uk-text-right{colspan: 2}
        = f.submit f.object.persisted? ? "修改" : "增加", class: 'uk-button'


