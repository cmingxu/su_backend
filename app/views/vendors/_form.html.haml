= form_for @vendor do |f|
  - if @vendor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vendor.errors.count, "error")} prohibited this vendor from being saved:"
      %ul
        - @vendor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :tel
    = f.text_field :tel
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :short_desc
    = f.text_area :short_desc
  .field
    = f.label :desc
    = f.text_area :desc
  .actions
    = f.submit 'Save'
