= form_for(resource, as: resource_name, url: session_path(resource_name), class: "uk-panel uk-panel-box uk-form") do |f|
  .uk-form-row
    = f.email_field :email, autofocus: true, class: "uk-width-1-1 uk-form-large", placeholder: "请输入邮箱"
  .uk-form-row
    = f.password_field :password, autocomplete: "off", class: "uk-width-1-1 uk-form-large", placeholder: "请输入密码"
  .uk-form-row
    = text_field_tag :captcha, "", class: "uk-width-1-2 uk-form-large uk-float-left"
    = show_simple_captcha

  - if devise_mapping.rememberable?
    .uk-form-row
    = f.label :remember_me, "本机记住我？"
    = f.check_box :remember_me
  .uk-form-row
    = f.submit "登录", class: "uk-width-1-1 uk-button uk-button-primary uk-button-large"
=# render "devise/shared/links"
