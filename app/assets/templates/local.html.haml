.uk-width-medium-1-1.su_models_header
  %ul.uk-tab{'data-uk-tab' => '{connect: "#tabs"}'}
    %li
      %a{'ui-sref' => 'attributes'} 属性
    %li.uk-active
      %a{href: ''} 本地
    %li
      %a{'ui-sref' => 'remote'} 远程
    %li
      %a{'ui-sref' => 'system'} 构建中国
  -##search_area.uk-margin-right.uk-medium-widht-1-3
    -#%input.uk-form-small{name: 'search'}
    -#%span
      -#%i.uk-icon-user

  %ul#tabs.uk-switcher.uk-margin
    %li.uk-active
      .models.su_local_models
        .model_item{'ng-repeat' => "model in local_models"}
          .model_icon
            %img{"ng-src" => "{{model.icon}}", width: 40, height: 50 }
          .model_details
            .model_name
              %strong {{model.name}}
            .model_desc
              %span.model_size
                {{model.skp_file_size}}
              %span.model_buttons.uk-float-right
                %button.uk-button.uk-button-success{"ng-click" => "add_by_name(model.name)"} 生成
                %button.uk-button.uk-button-success{"ng-click" => "replace_by_name(model.name)"} 替换
                %button.uk-button.uk-button-success{"ng-click" => "remove_local_model(model.name)"} 删除
                %button.uk-button.uk-button-success{"ng-click" => "upload_local_model(model.name)", "ng-if"=>"CurrentUser.isLogin()"} 上传
            .model_created_time
              {{model.created_at_normal}}
    %li
    %li
