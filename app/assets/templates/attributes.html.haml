.uk-width-medium-1-1.su_models_header
  %ul.uk-tab{'data-uk-tab' => '{connect: "#tabs"}'}
    %li.uk-active
      %a 属性
    %li
      %a{'ui-sref' => 'local'} 本地
    %li
      %a{'ui-sref' => 'remote'} 远程
    %li
      %a{'ui-sref' => 'system'} 构建中国
  -##search_area.uk-margin-right.uk-medium-widht-1-3
    -#%input.uk-form-small{name: 'search'}
    -#%span
      -#%i.uk-icon-user

  %ul#tabs.uk-switcher.uk-margin
    %li.uk-active
      .models.su_attributes{:style => "overflow-y: scroll;"}
        %div{"ng-show" => "current_entity.type=='component_definition'"}
          %table.uk-table.uk-table-hover.uk-table.stripped
            %thead
              %tr
                %th.uk-text-center 属性
                %th.uk-text-center 值

            %tbody
              %tr{"ng-repeat" => "attr in displayable_attributes"}
                %td.uk-text-right {{attr.display}}
                %td
                  %div{"ng-if" => "attr.type == 'input'"}
                    %input{"ng-model" => "attr.value", "ng-disabled" => "!attr.editable", "ng-model-onblur" => true, "ng-change" => "change(attr.key, attr.value)"}
                  %div{"ng-if" => "attr.type == 'select'"}
                    %select
                      %option{"ng-repeat" => "option in attr.options", "ng-model" => "option", "ng-disabled" => "!attr.editable", "ng-change" => "change(attr.key, attr.value)"} {{option}}

        %div{"ng-hide" => "current_entity.type=='component_definition'"}
          .uk-alert.uk-alert-success.uk-text-center 请选择一个组件


    %li
    %li
